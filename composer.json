{
    "name":        "ddoe/wysiwyg-editor-module",
    "description": "Summernote WYSIWYG Editor for OXID eShop.",
    "type":        "oxideshop-module",
    "keywords":    [
        "oxid",
        "modules",
        "eShop",
        "WYSIWYG",
        "Summernote",
        "Editor"
    ],
    "homepage":    "https://www.oxid-esales.com/",
    "license": "proprietary",
    "authors":     [
        {
            "name":  "OXID eSales AG & digidesk - media solutions",
            "email": "info@oxid-esales.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "prefer-dist": true,
    "require":     {
        "php": ">=8.0",
        "webmozart/glob": "^4.6.0",
        "webmozart/path-util": "^2.3.0",
        "ext-gd": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8.11",
        "squizlabs/php_codesniffer": "3.*",
        "oxid-esales/oxideshop-ce": "dev-b-7.0.x",
        "phpunit/phpunit": "^9.6"
    },
    "autoload":    {
        "psr-4": {
            "OxidEsales\\WysiwygModule\\": "./src",
            "OxidEsales\\WysiwygModule\\Tests\\": "./tests"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=tests/phpcs.xml",
        "phpcbf": "phpcbf --standard=tests/phpcs.xml",

        "phpstan": "phpstan --xdebug -ctests/PhpStan/phpstan.neon analyse src/",
        "phpstan-report": "phpstan --xdebug -ctests/PhpStan/phpstan.neon analyse src/ --error-format=json > phpstan.report.json",

        "phpunit": "XDEBUG_MODE=coverage vendor/bin/phpunit --bootstrap=/var/www/source/bootstrap.php --config=tests/",
        "phpunit-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text --bootstrap=/var/www/source/bootstrap.php --config=tests/ --coverage-html=tests/result/coverage"
    },
    "config": {
        "allow-plugins": {
            "oxid-esales/oxideshop-unified-namespace-generator": true,
            "oxid-esales/oxideshop-composer-plugin": true
        }
    }
}
